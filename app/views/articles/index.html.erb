
<div class="col-sm-12 col-sm-offset-2">
  <% @articles.each do |article| %>
    <div class="d-flex justify-content-center">
      <h2><%= link_to article.title, article_path(article) %></h2>
    </div>
    <div class="d-flex justify-content-center">
      <p><%= "#{article.content}" %><p>
    </div>
  <% end %>
</div>
